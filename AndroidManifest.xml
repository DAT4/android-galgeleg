<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sh.mama.hangman">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="sh.mama.hangman.activities.EndGameActivity"/>
        <activity android:name="sh.mama.hangman.activities.HighScoreActivity"/>
        <activity android:name="sh.mama.hangman.activities.StartGameActivity"/>
        <activity android:name="sh.mama.hangman.activities.EditWordActivity"/>
        <activity android:name="sh.mama.hangman.activities.EditCategoryActivity"/>
        <activity android:name="sh.mama.hangman.activities.PickCategoryActivity"/>
        <activity android:name="sh.mama.hangman.activities.PlayGameActivity" />
        <activity android:name="sh.mama.hangman.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>